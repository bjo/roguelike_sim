{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CityActionDefinition",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "label", "category", "eraUnlock", "actionPointCost"],
    "properties": {
      "id": { "type": "string" },
      "label": { "type": "string" },
      "category": { "type": "string" },
      "eraUnlock": { "type": "string" },
      "actionPointCost": { "type": "number" },
      "cooldownTurns": { "type": "number" },
      "costs": {
        "type": "array",
        "items": { "type": "object", "required": ["type", "amount"], "properties": { "type": { "type": "string" }, "amount": { "type": "number" } } }
      },
      "immediateDeltas": {
        "type": "array",
        "items": { "type": "object", "required": ["type", "amount"], "properties": { "type": { "type": "string" }, "amount": { "type": "number" } } }
      },
      "addEffects": { "type": "array" },
      "tests": { "type": "array" },
      "project": { "type": "object" },
      "requiresTags": { "type": "array", "items": { "type": "string" } }
    }
  }
}


