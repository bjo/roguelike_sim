{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Crisis",
  "type": "object",
  "required": ["id", "era", "title", "description", "intensity", "options"],
  "properties": {
    "id": { "type": "string" },
    "era": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "intensity": { "type": "number", "minimum": 1, "maximum": 3 },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "outcomes"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "costs": { "type": "array" },
          "tests": { "type": "array" },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["chance"],
              "properties": {
                "chance": { "type": "number", "minimum": 0, "maximum": 1 },
                "deltas": { "type": "array" },
                "addEffects": { "type": "array" },
                "cityChanges": { "type": "array" }
              }
            }
          }
        }
      }
    }
  }
}


