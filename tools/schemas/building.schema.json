{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Building",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "label", "roleId", "capacity"],
    "properties": {
      "id": { "type": "string" },
      "label": { "type": "string" },
      "eraUnlock": { "type": "string" },
      "tags": {
        "type": "array",
        "items": { "type": "string" },
        "default": []
      },
      "roleId": { "type": "string" },
      "capacity": { "type": "integer", "minimum": 0 }
    },
    "additionalProperties": false
  }
}
