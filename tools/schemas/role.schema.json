{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Role",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "label", "production"],
    "properties": {
      "id": { "type": "string" },
      "label": { "type": "string" },
      "eraUnlock": { "type": "string" },
      "tags": {
        "type": "array",
        "items": { "type": "string" },
        "default": []
      },
      "production": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type", "amount"],
          "properties": {
            "type": { "type": "string", "enum": ["food", "materials", "production", "knowledge", "unity", "gold"] },
            "amount": { "type": "integer", "minimum": 0 }
          }
        },
        "default": []
      }
    },
    "additionalProperties": false
  }
}
